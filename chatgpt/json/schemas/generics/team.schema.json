{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/stfbln/public/main/chatgpt/json/schemas/generics/team.schema.json",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the team"
        },
        "purposes": {
            "$ref": "https://raw.githubusercontent.com/stfbln/public/main/chatgpt/json/schemas/generics/statements.schema.json",
            "description": "Statements describing the purpose of the team, what it is trying to accomplish as part of the company"
        },
        "context": {
            "$ref": "https://raw.githubusercontent.com/stfbln/public/main/chatgpt/json/schemas/generics/statements.schema.json",
            "description": "Statements describing the context in which the company evolves"
        },
        "contact": {
            "$ref": "https://raw.githubusercontent.com/stfbln/public/main/chatgpt/json/schemas/generics/contact.schema.json",
            "description": "The team contact information"
        }
    },
    "required": ["name"]
}